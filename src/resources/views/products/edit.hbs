<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>

    <form class="mt-4" method="POST" action="/products/{{product.[0].MASP}}?_method=PUT">
        <div class="form-group">
            <label for="MASP">Mã sản phẩm</label>
            <input type="text" class="form-control" value="{{product.[0].MASP}}" id="MASP" name="MASP"
                placeholder="Nhập mã sản phẩm">
        </div>

        <div class="form-group">
            <label for="MALOAI">Danh mục</label>
            <select class="form-control" id="MALOAI" name="MALOAI">
                {{#each category}}
                <option value="{{MALOAI}}">{{TENLOAI}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="TENSP">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.[0].TENSP}}" id="TENSP" name="TENSP"
                placeholder="Nhập tên sản phẩm">
        </div>

        <div class="form-group">
            <label for="HINHANH">Hình ảnh</label>
            <input type="text" class="form-control" value="{{product.[0].HINHANH}}" id="HINHANH" name="HINHANH"
                placeholder="Nhập đường link hình ảnh">
        </div>

        <div class="form-group">
            <label for="MOTA">Mô tả</label>
            <textarea type="text" class="form-control" value="{{product.[0].MOTA}}" id="MOTA" name="MOTA"
                placeholder="Nhập mô tả sản phẩm"></textarea>
        </div>

        <div class="form-group">
            <label for="GIABAN">Giá bán</label>
            <input type="text" class="form-control" value="{{product.[0].GIABAN}}"
                id="GIABAN" name="GIABAN" placeholder="Nhập giá bán" readonly>
            <p class="text-muted">Để cập nhật giá bán, xin hãy dùng chức năng <a href="/me/change-price">đổi giá</a></p>
            
        </div>

        <div class="form-group">
            <label for="TON">Tồn kho</label>
            <input type="text" class="form-control" value="{{product.[0].TON}}" id="TON" name="TON"
                placeholder="Nhập tồn kho" readonly>
            <p class="text-muted">Để cập nhật thêm hàng, xin hãy dùng chức năng <a href="/me/add-item">nhập hàng</a></p>
        </div>

        <div class="form-group">
            <label for="NSX">Nhà sản xuất</label>
            <input type="text" class="form-control" value="{{product.[0].NSX}}" id="NSX" name="NSX"
                placeholder="Nhập NSX">
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>